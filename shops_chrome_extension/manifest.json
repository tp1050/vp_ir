{
  "manifest_version": 3,
  "name": "Universal Product Scraper",
  "version": "1.1",
  "description": "Extracts product data from JSON-LD on any site to JSON/CSV.",
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}